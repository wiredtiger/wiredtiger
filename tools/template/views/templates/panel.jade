.panel.panel-default
  .panel-heading
    if suptitle
      span.suptitle= suptitle
    h4.panel-title
      i(data-hook="indicator").fa.fa-circle-o
      a(data-toggle='collapse', data-parent='#panel-accordion')
        = subtitle
      .pull-right
        i(data-hook='caret', class='fa')

  div.panel-collapse.collapse
    .panel-body
      ul(data-hook='stats').stats
